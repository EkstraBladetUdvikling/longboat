{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "outDir": "./src",
    "moduleResolution": "node",
    "target": "es6"
  },
  "indent": [true, "spaces", 2],
  "include": ["./src/*.ts", "./src/*.d.ts", "./src/**/*.d.ts"],
  "exclude": ["./node_modules"]
}
